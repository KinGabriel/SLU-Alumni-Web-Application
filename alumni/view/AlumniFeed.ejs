<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SLU Alumina</title>
    <link href="../assets/css/AlumniFeed.css" rel="stylesheet">
    <link href="/../../node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <!-- Header separator -->
    <div class="header-separator"></div>

    <!-- Header -->
    <header>
        <h1>
            <img src="../assets/images/logo.png" alt="SLU Alumina Logo" class="slu-logo">
            <!-- Search bar -->
            <div class="search">
                <form id="searchForm">
                    <input type="text" name="search" placeholder="Search..">
                    <button type="submit">
                        <img src="../assets/images/search.png" alt="Search" class="search-icon">
                    </button>
                </form>
            </div>
        </h1>
    </header>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Sidebar -->
        <aside>
            <div class="profile">
                <div class="profile-bg">
                    <img src="../assets/images/slu.jpg" alt="Background Image">
                </div>
                <div class="profile-info">
                    <!-- Profile Picture and Name -->
                    <img src="<%= AlumniFeed.pfp ? 'data:image/jpeg;base64,' + AlumniFeed.pfp.toString('base64') : '../assets/images/default-avatar-icon.jpg' %>" alt="Profile Picture" class="profile-pic">
                    <div class="name"><%= AlumniFeed.fname %> <%= AlumniFeed.lname %></div>
                    <div class="bio"><%= AlumniFeed.bio || 'No bio available' %></div>
                    <div class="stats">
                        <div class="stat-item">
                            <strong>Posts</strong><br>0
                        </div>
                        <div class="stat-item">
                            <strong>Followers</strong><br>0
                        </div>
                        <div class="stat-item">
                            <strong>Following</strong><br>0
                        </div>
                    </div>                    
            

            <!-- Navigation -->
            <nav>
                <ul>
                    <li>
                        <img src="../assets/images/feed.png" alt="Feed Icon" class="nav-icon">
                        <a href="#">Feed</a>
                    </li>
                    <li>
                        <img src="../assets/images/connection.png" alt="Connections Icon" class="nav-icon">
                        <a href="#">Connections</a>
                    </li>
                    <li>
                        <img src="../assets/images/latestNews.png" alt="News Icon" class="nav-icon">
                        <a href="#">Latest News</a>
                    </li>
                    <li>
                        <img src="../assets/images/events.png" alt="Events Icon" class="nav-icon">
                        <a href="#">Events</a>
                    </li>
                    <li>
                        <img src="../assets/images/job.png" alt="Job Opportunities Icon" class="nav-icon">
                        <a href="#">Job Opportunities</a>
                    </li>
                    <li>
                        <img src="../assets/images/favorites.png" alt="Favorites Icon" class="nav-icon">
                        <a href="#">Favorites</a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Feed Content -->
        <div class="content">
            <!-- Post Box -->
            <div class="post-box">
                <div class="user-profile">
                    <img src="<%= AlumniFeed.pfp ? 'data:image/jpeg;base64,' + AlumniFeed.pfp.toString('base64') : '../assets/images/default-avatar-icon.jpg' %>" alt="Profile Picture" class="profile-pic">

                </div>
                <div class="post-content">
                    <textarea placeholder="What's on your mind?" rows="3"></textarea>
                    <div class="post-actions">
                        <button class="add-photo">
                            <img src="../assets/images/addphoto.png" alt="Photo Icon" class="button-icon">
                            Photo
                        </button>
                        <button class="add-video">
                            <img src="../assets/images/addvideo.png" alt="Video Icon" class="button-icon">
                            Video
                        </button>
                    </div>
                </div>
            </div>

            <!-- Feed -->
            <div class="feed">
                <!-- Example Post -->
                <div class="post">
                    <div class="post-header">
                        <img src="../assets/images/candy.jpg" alt="User Profile" class="user-pic">
                        <div>
                            <h4 class="user-name">Asta Staria</h4>
                            <span class="post-time">2 hours ago</span>
                        </div>
                    </div>
                    <div class="post-content">
                        <p>Enjoying the beautiful weather today!</p>
                        <img src="../assets/images/blackclover.jpg" alt="Post Image" class="post-image">
                    </div>
                    <hr>
                    <div class="post-actions card-footer d-flex align-items-center">
                        <div class="d-flex">
                            <button class="btn btn-outline-primary me-2">
                                <img src="../assets/images/like.png" alt="Like Icon" class="button-icon me-2"> Likes (22)
                            </button>
                            <button class="btn btn-outline-secondary" data-bs-toggle="collapse" data-bs-target="#comments2">
                                <img src="../assets/images/comment.png" alt="Comment Icon" class="button-icon me-2"> Comments (23)
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script>
   window.onscroll = function() {
    var scrollPosition = window.pageYOffset;
    var headerSeparator = document.getElementsByClassName("header-separator")[0];
    var header = document.getElementsByTagName("header")[0];
    if (scrollPosition === 0) {
        headerSeparator.style.top = "0";
        header.style.top = "30px";  
        header.classList.remove("sticky");  
    } else {
        headerSeparator.style.top = "-10px";
        header.style.top = "0";
        if (scrollPosition > 100) {
            header.classList.add("sticky");  
        }
    }
};
</script>

</body>
</html>
